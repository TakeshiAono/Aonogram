<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @picture.user_id %>
</p>

<p>
  <strong>Image:</strong>
  <%= @picture.image %>
    <%= image_tag @picture.image.url if @picture.image.url  %>
</p>

<p>
  <strong>Coment:</strong>
  <%= @picture.coment %>
</p>

<% unless User.find(session[:user_id]).favorite_pictures.find_by(id:@picture.id) then %>
  <%= link_to "お気に入り登録", favorite_picture_path(@picture.id) %>
<% end %>

<%= link_to 'Edit', edit_picture_path(@picture) %> 
<%= link_to 'Back', pictures_path %>
