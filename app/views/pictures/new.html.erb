<%= form_with(model: @picture, local: true, url: confirm_pictures_path  ) do |form| %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :coment %>
    <%= form.text_area :coment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

